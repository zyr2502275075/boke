<!-- 分类管理 -->
<div role="tabpanel" class="tab-pane fade" id="Section3">
    <div class="tab-title">
        <h3>导航分类管理</h3>
        <a href="javascript:addCategory();">添加</a>
    </div>
    <!--栏目列表-->
    <table id="table">
        <thead>
        <tr>
            <th style="text-align:left;">名称</th>
            <th>路径</th>
            <th>排序值</th>
            <th>模版</th>
            <th>前台是否显示</th>
            <th>是否是系统分类</th>
            <th>操作</th>
        </tr>
        </thead>
        <tbody id="categoryList">
        </tbody>
    </table>
    <!-- 添加栏目 -->
    <div class="modal fade" id="categoryModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">文章分类</h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal" id="categoryForm">
                        <input type="hidden" id="id" value="">
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label" for="formGroupInputSmall">名称</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="text" id="name" placeholder="请输入分类名称">
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label" for="formGroupInputSmall">路径</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="text" id="path" placeholder="请输入分类路径">
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label" for="formGroupInputSmall">父分类</label>
                            <div class="col-sm-10">
                                <select class="form-control" id="pid">
                                    <option value="">跟分类</option>
                                    <% for(let i = 0; i < category.length; i++){ %>
                                    <option value="<%= category[i]._id %>"><%= category[i].name %></option>
                                    <% } %>
                                </select>
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label" for="formGroupInputSmall">排序值</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="text" id="sort" placeholder="请输入排序值" value="100">
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label" for="formGroupInputSmall">模版名称</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="text" id="template" placeholder="请输入模版名称">
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label" for="formGroupInputSmall">导航显示</label>
                            <div class="col-sm-10">
                                <select class="form-control" id="is_nav">
                                    <option value="1" selected>是</option>
                                    <option value="0">否</option>
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                    <button type="button" class="btn btn-danger" onclick="saveCategory()">保存</button>
                </div>
            </div>
        </div>
    </div>
</div>